<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.dartcounter.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/player1_bg"
            style="@style/playerField"
            android:background="@color/colorPrimary">


            <TextView
                style="@style/playerText"
                android:text="@string/player1" />

            <TextView
                android:id="@+id/scoreP1"
                style="@style/scoreText"
                android:text="@string/score1" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/player2_bg"
            style="@style/playerField"
            android:background="@color/white">

            <TextView
                style="@style/playerText"
                android:text="@string/player2" />

            <TextView
                android:id="@+id/scoreP2"
                style="@style/scoreText"
                android:text="@string/score2" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/lineWidth"
        android:background="@color/grey" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/current_score"
            style="@style/scoreLine"
            android:text="@string/number" />

        <TextView
            style="@style/scoreLine"
            android:text="@string/times" />

        <TextView
            android:id="@+id/current_multiplier"
            style="@style/scoreLine"
            android:text="@string/multiplier" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/lineWidth"
        android:background="@color/grey" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            style="@style/numberButton"
            android:onClick="setNumber"
            android:tag="1"
            android:text="1" />

        <Button
            style="@style/numberButton"
            android:onClick="setNumber"
            android:tag="2"
            android:text="2" />

        <Button
            style="@style/numberButton"
            android:onClick="setNumber"
            android:tag="3"
            android:text="3" />

        <Button
            style="@style/numberButton"
            android:onClick="setNumber"
            android:tag="4"
            android:text="4" />

        <Button
            style="@style/numberButton"
            android:onClick="setNumber"
            android:tag="5"
            android:text="5" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            style="@style/numberButton"
            android:onClick="setNumber"
            android:tag="6"
            android:text="6" />

        <Button
            style="@style/numberButton"
            android:onClick="setNumber"
            android:tag="7"
            android:text="7" />

        <Button
            style="@style/numberButton"
            android:onClick="setNumber"
            android:tag="8"
            android:text="8" />

        <Button
            style="@style/numberButton"
            android:onClick="setNumber"
            android:tag="9"
            android:text="9" />

        <Button
            style="@style/numberButton"
            android:onClick="setNumber"
            android:tag="10"
            android:text="10" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            style="@style/numberButton"
            android:onClick="setNumber"
            android:tag="11"
            android:text="11" />

        <Button
            style="@style/numberButton"
            android:onClick="setNumber"
            android:tag="12"
            android:text="12" />

        <Button
            style="@style/numberButton"
            android:onClick="setNumber"
            android:tag="13"
            android:text="13" />

        <Button
            style="@style/numberButton"
            android:onClick="setNumber"
            android:tag="14"
            android:text="14" />

        <Button
            style="@style/numberButton"
            android:onClick="setNumber"
            android:tag="15"
            android:text="15" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            style="@style/numberButton"
            android:onClick="setNumber"
            android:tag="16"
            android:text="16" />

        <Button
            style="@style/numberButton"
            android:onClick="setNumber"
            android:tag="17"
            android:text="17" />

        <Button
            style="@style/numberButton"
            android:onClick="setNumber"
            android:tag="18"
            android:text="18" />

        <Button
            style="@style/numberButton"
            android:onClick="setNumber"
            android:tag="19"
            android:text="19" />

        <Button
            style="@style/numberButton"
            android:onClick="setNumber"
            android:tag="20"
            android:text="20" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            style="@style/numberButton"
            android:onClick="setDouble"
            android:text="double" />

        <Button
            style="@style/numberButton"
            android:onClick="setNumber"
            android:tag="25"
            android:text="25" />

        <Button
            style="@style/numberButton"
            android:onClick="setTriple"
            android:text="Triple" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/lineWidth"
        android:background="@color/grey" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            style="@style/switchButton"
            android:onClick="updateScore"
            android:text="Add" />

        <Button
            style="@style/switchButton"
            android:onClick="changePlayer"
            android:text="Switch" />

        <Button
            style="@style/switchButton"
            android:onClick="resetGame"
            android:text="Reset" />

    </LinearLayout>
</LinearLayout>
